<odoo>
  <data>
    <record id="view_distribution_zone_tree" model="ir.ui.view">
      <field name="name">distribution.zone.tree</field>
      <field name="model">distribution.zone</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_distribution_zone_form" model="ir.ui.view">
      <field name="name">distribution.zone.form</field>
      <field name="model">distribution.zone</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_distribution_zones" model="ir.actions.act_window">
      <field name="name">Zones</field>
      <field name="res_model">distribution.zone</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_distribution_route_tree" model="ir.ui.view">
      <field name="name">distribution.route.tree</field>
      <field name="model">distribution.route</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="zone_id"/>
          <field name="driver"/>
          <field name="vehicle"/>
        </tree>
      </field>
    </record>

    <record id="view_distribution_route_form" model="ir.ui.view">
      <field name="name">distribution.route.form</field>
      <field name="model">distribution.route</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="zone_id"/>
              <field name="driver"/>
              <field name="vehicle"/>
              <field name="default_day"/>
            </group>
            <separator/>
            <button name="action_generate_tour" type="object" string="Generate Tour" class="btn-primary" />
            <field name="notes"/>
            <notebook>
              <page string="Route Lines">
                <field name="route_line_ids">
                  <tree editable="bottom" default_order="sequence">
                    <field name="sequence"/>
                    <field name="client_id"/>
                    <field name="client_address"/>
                    <field name="expected_qty"/>
                    <field name="map_link"/>
                    <field name="note"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_distribution_routes" model="ir.actions.act_window">
      <field name="name">Routes</field>
      <field name="res_model">distribution.route</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
