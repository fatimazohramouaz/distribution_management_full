<odoo>
  <record id="view_distribution_purchase_tree" model="ir.ui.view">
    <field name="name">distribution.purchase.order.tree</field>
    <field name="model">distribution.purchase.order</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="supplier_id"/>
        <field name="order_date"/>
        <field name="total_amount"/>
        <field name="received"/>
      </tree>
    </field>
  </record>

  <record id="view_distribution_purchase_form" model="ir.ui.view">
    <field name="name">distribution.purchase.order.form</field>
    <field name="model">distribution.purchase.order</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="supplier_id"/>
            <field name="order_date"/>
            <field name="total_amount" readonly="1"/>
            <field name="received"/>
          </group>
          <notebook>
            <page string="Lines">
              <field name="order_line_ids">
                <tree editable="bottom">
                  <field name="product_id"/>
                  <field name="quantity"/>
                  <field name="unit_price"/>
                  <field name="subtotal"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_distribution_purchases" model="ir.actions.act_window">
    <field name="name">Purchase Orders</field>
    <field name="res_model">distribution.purchase.order</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_distribution_purchases_action" name="Purchase Orders" parent="menu_distribution_purchases" action="action_distribution_purchases"/>
</odoo>
