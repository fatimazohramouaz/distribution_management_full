<odoo>
  <record id="view_distribution_sale_order_tree" model="ir.ui.view">
    <field name="name">distribution.sale.order.tree</field>
    <field name="model">distribution.sale.order</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="customer_id"/>
        <field name="order_date"/>
        <field name="total_amount"/>
        <field name="paid_amount"/>
        <field name="remaining_debt"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_distribution_sale_order_form" model="ir.ui.view">
    <field name="name">distribution.sale.order.form</field>
    <field name="model">distribution.sale.order</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="customer_id"/>
            <field name="order_date"/>
            <field name="paid_amount"/>
            <field name="total_amount" readonly="1"/>
            <field name="remaining_debt" readonly="1"/>
            <field name="state"/>
          </group>
          <footer>
            <button name="action_confirm" type="object" string="Confirm" class="btn-primary" attrs="{'invisible': [('state','!=','draft')]}"/>
            <button name="action_done" type="object" string="Mark Done" class="btn-success" attrs="{'invisible': [('state','!=','confirmed')]}"/>
          </footer>
          <notebook>
            <page string="Lines">
              <field name="order_line_ids">
                <tree editable="bottom">
                  <field name="product_id"/>
                  <field name="quantity"/>
                  <field name="unit_price"/>
                  <field name="subtotal"/>
                  <field name="delivered_qty"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_distribution_sale_orders" model="ir.actions.act_window">
    <field name="name">Sales Orders</field>
    <field name="res_model">distribution.sale.order</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_distribution_orders_action" name="Sales Orders" parent="menu_distribution_orders" action="action_distribution_sale_orders"/>
</odoo>
